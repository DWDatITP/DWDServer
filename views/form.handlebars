<div class='row'>
  <div class='col-md-4'>
    <form action='/form' method='post' role='form'>
      <div class='form-group'>
        <label for='name'>Name</label>
        <input class='form-control' name='name'>
      </div>
      <div class='form-group'>
        <label for='name'>Favorite Color</label>
        <input class='form-control' name='favoriteColor'>
      </div>
      <div class="checkbox">
        <label>
          <input type="checkbox" value="yes" name='tos'>
          I agree to the terms of service.
        </label>
      </div>
      <div class="radio">
        <label>
          <input type="radio" name="upOrDown" value="up" checked>
          Up?
        </label>
      </div>
      <div class="radio">
        <label>
          <input type="radio" name="upOrDown" value="down">
          Down?
        </label>
      </div>
      <button type="submit" class="btn btn-default">Submit</button>
    </form>
  </div>

  {{#if formResults}}
    <div class='col-md-4'>
      <table class='table'>
        <thead>
          <tr>
            <th>Name</th>
            <th>Favorite Color</th>
            <th>Agreed to Terms?</th>
            <th>Up or Down?</th>
        </thead>
        <tbody>
          <tr>
            <td>{{formResults.name}}</td>
            <td>{{formResults.favoriteColor}}</td>
            <td>{{formResults.tos}}</td>
            <td>{{formResults.upOrDown}}</td>
          </tr>
        </tbody>
      </table>
    </div>
  {{/if}}
</div>
